<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nepaltourismmanagementapp.controller.LoginController">
   
   <!-- Background Image -->
   <center>
      <StackPane>
         <!-- Background Image -->
         <ImageView fitHeight="900" fitWidth="1600" preserveRatio="false">
            <image>
               <Image url="@../images/Login.jpg" />
            </image>
         </ImageView>
         
         <!-- Content with proper spacing -->
         <VBox alignment="CENTER" spacing="0">
            <padding>
               <Insets bottom="80.0" left="50.0" right="50.0" top="80.0" />
            </padding>
            
            <HBox alignment="CENTER" maxHeight="650.0" prefHeight="650.0" prefWidth="1935.0" spacing="60">
               <!-- Left Side - Welcome Text -->
               <VBox alignment="CENTER_LEFT" maxWidth="450" prefHeight="688.0" prefWidth="400.0" spacing="25">
                  <!-- Logo -->
                  <ImageView fitHeight="327.0" fitWidth="327.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/nep-logo.png" />
                     </image>
                  </ImageView>
                  
                  <Label styleClass="welcome-text,welcome-subtitle" text="Welcome To" />
                  
                  <Label styleClass="welcome-text,brand-title" text="NEPXPLORE" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </VBox>
               
               <!-- Right Side - Login Form (More Compact) -->
               <VBox fx:id="loginContainer" alignment="CENTER" maxHeight="520" maxWidth="380" prefHeight="304.0" prefWidth="375.0" styleClass="login-form-container">
                  <padding>
                     <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
                  </padding>
               
               <!-- Login Title -->
               <Label styleClass="login-title" text="login">
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </Label>
               
               <!-- Username Field -->
               <HBox alignment="CENTER_LEFT" styleClass="input-container">
                  <TextField fx:id="usernameField" blendMode="LIGHTEN" promptText="username" styleClass="login-field" HBox.hgrow="ALWAYS" />
                  <ImageView fitHeight="20" fitWidth="20">
                     <image>
                        <Image url="@../images/user_icon.png" />
                     </image>
                  </ImageView>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </HBox>
               
               <!-- Password Field -->
               <HBox alignment="CENTER_LEFT" styleClass="input-container">
                  <PasswordField fx:id="passwordField" blendMode="LIGHTEN" promptText="password" styleClass="login-field" HBox.hgrow="ALWAYS" />
                  <ImageView fitHeight="20" fitWidth="20">
                     <image>
                        <Image url="@../images/password_icon.png" />
                     </image>
                  </ImageView>
                  <VBox.margin>
                     <Insets bottom="30.0" />
                  </VBox.margin>
               </HBox>
               
               <!-- User Type Selection -->
               <HBox alignment="CENTER" spacing="40">
                  <RadioButton fx:id="touristRadio" selected="true" styleClass="radio-button" text="tourist">
                     <toggleGroup>
                        <ToggleGroup fx:id="userTypeGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="guideRadio" styleClass="radio-button" text="guide" toggleGroup="$userTypeGroup" />
                  <RadioButton fx:id="adminRadio" styleClass="radio-button" text="admin" toggleGroup="$userTypeGroup" />
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </HBox>
               
               <!-- Language Selection -->
               <HBox alignment="CENTER">
                  <Label styleClass="language-label" text="Language" />
                  <ComboBox fx:id="languageCombo" prefWidth="150" promptText="English" styleClass="combo-box">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </HBox>
               
               <!-- Login Button -->
               <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="50" prefWidth="320" styleClass="login-button" text="login">
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </Button>
               
               <!-- Register Link -->
               <HBox alignment="CENTER">
                  <Label styleClass="label" text="Don't have an account? " />
                  <Hyperlink fx:id="registerLink" onAction="#handleRegister" styleClass="hyperlink" text="Register" />
               </HBox>
               </VBox>
            </HBox>
         </VBox>
      </StackPane>
   </center>
</BorderPane>
